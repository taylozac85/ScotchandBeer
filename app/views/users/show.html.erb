<p><%= @user.user_name %></p>

<p>Search</p>

<p><%= link_to "Write review", "/writereviews" %></p>

<table border="1">
	<tr>
		<th>Date</th>
		<th>Drink</th>
		<th>Rating</th>
		<th>Review</th>
	</tr>
	
	<% @reviews.each do |review| %>
	<% @drink = Drink.find(review.drink_id) %>
	<tr>
		<td><%= review.review_date %></td>
		<td><%= link_to @drink.drink_name, "/reviews/#{@drink.id}" %></td> <!--REFACTOR-->
		<td><%= review.rating %></td>
		<td><%= review.review %></td>
	</tr>
	<% end %>
</table>